<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
     <!-- FOLHA DE ESTILO PERSONALIZADA -->
    <!-- Main Theme -->
    <style name="SelfieCup_Theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SelfieCup.ActionBar</item>
        <!-- <item name="android:homeAsUpIndicator">@drawable/ic_drawer_branco</item> -->
    </style>
    
    <!-- ActionBar styles -->
    <style name="SelfieCup.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/cor_principal_verde</item>
        <item name="android:titleTextStyle">@style/SelfieCup.ActionBar.Text</item>
    </style>

    <style name="SelfieCup.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
    
    <!-- No ActionBar -->
    <style name="SelfieCup.NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>
    
    <!-- Estilo dos Botões da página HOME -->
    <style name="ButtonHome" parent ="@android:style/Widget.Button">
        <item name= "android:textColor">@color/cor_principal_verde</item>
        <item name= "android:gravity">center</item>
        <item name= "android:background">@drawable/button_home_shape</item>
        </style >
        
    <style name="ButtonCamera" parent ="@android:style/Widget.Button">
        <item name= "android:textColor">@color/cor_principal_verde</item>
        <item name= "android:gravity">center</item>
        <item name= "android:background">@drawable/button_home_shape</item>
        </style >
        
    <!-- EditText Singleline com sombra Input -->
    <style name="SelfieEditTextSingle" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
